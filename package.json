  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chaspy/magicpod-datadog-action/issues"
  },
  "homepage": "https://github.com/chaspy/magicpod-datadog-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@datadog/datadog-api-client": "^1.11.0",
    "@types/axios": "^0.14.0",
    "axios": "^1.3.4"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
